#include <iostream>

using namespace std;

int main() {
    int N;
    string S;

    cout << "Masukkan jumlah babak: ";
    cin >> N;

    cout << "Masukkan hasil pertandingan (A/B/C): ";
    cin >> S;

    int poinA = 0, poinB = 0;
    int streak_A = 0, streak_B = 0;

    for (int i = 0; i < N; i++) {
        char hasil = S[i];

        if (hasil == 'A') {
            poinA += 3;
            streak_A++;
            streak_B = 0;
            if (streak_A == 3) {
                poinA += 2; 
                streak_A = 0;
            }
        } else if (hasil == 'B') {
            poinB += 3;
            streak_B++;
            streak_A = 0;
            if (streak_B == 3) {
                poinB += 2; 
                streak_B = 0;
            }
        } else if (hasil == 'C') {
            poinA += 1;
            poinB += 1;
            streak_A = 0;
            streak_B = 0;
        } else {
            cout << "Input tidak valid pada karakter ke-" << i+1 << endl;
            return 1;
        }
    }

    cout << "\nPoin A: " << poinA << endl;
    cout << "Poin B: " << poinB << endl;

    if (poinA > poinB) {
        cout << "\nPemenangnya adalah pemain A" << endl;
    } else if (poinB > poinA) {
        cout << "\nPemenangnya adalah pemain B" << endl;
    } else {
        cout << "\nHasil pertandingan Seri!" << endl;
    }

    return 0;
}
